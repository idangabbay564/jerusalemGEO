<div class="mydiv"></div>
<img src="../idk.svg" style="position: absolute; top: 10px; left: 10px; height: 50px; z-index: 10;">
<div class="container">
  <div class="row mb-5" style="margin-top: 70px">
    <div class="col-md-6 m-auto">
      <div class="card card-body shadow-lg text-right" dir=rtl>
        <% include ./partials/messages %>
        <form action="/users/register" method="POST">
          <div class="form-group">
            <input
              type="name"
              id="name"
              name="name"
              class="form-control"
              placeholder="הזן שם"
              value="<%= typeof name != 'undefined' ? name : '' %>"
            />
          </div>
          <div class="form-group">
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="הזן אימייל"
              value="<%= typeof email != 'undefined' ? email : '' %>"
            />
          </div>
          <div class="form-group">
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="הזן סיסמה"
              value="<%= typeof password != 'undefined' ? password : '' %>"
            />
          </div>
          <div class="form-group">
            <input
              type="password"
              id="password2"
              name="password2"
              class="form-control"
              placeholder="הזן סיסמה שוב"
              value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block" style="background-color: red; border: none">
            הרשמה
          </button>
        </form>
        <hr>
        <p class="lead mt-2 font-weight-bold">יש לך חשבון? <a href="/users/login">כניסה</a></p>
      </div>
    </div>
  </div>
</div>
